if paste.encrypted === true
  h1.heading #{paste.id} (encrypted)
if paste.encrypted === false
  h1.heading #{paste.id}

p.metadata
  | pasted #[span(title="#{fullTimestamp}") #{postedAt}] by #{paste.submitter}. 
  if expiresAt
    if paste.archive
      |  will be archived #[span(title="#{fullExpiresAtTimestamp}") #{expiresAt}]
    if !paste.archive
      |  expires #[span(title="#{fullExpiresAtTimestamp}") #{expiresAt}]
  |  #[br.only-mobile] #[span.not-mobile |] #[a(href="#{rawUrl}") view raw]
  if paste.contentType == "text/plain"
    |  | #[a#toggleWrapping(href="#") toggle wrapping]
    |  | #[a#toggleMarkdown(href="#") toggle markdown]

  div#error
