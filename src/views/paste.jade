extends layout

block head
  script(src='/javascripts/highlight.pack.js')
  script(src='/javascripts/highlightjs-line-numbers.min.js')
  script(src='/javascripts/syntax.js')
  link(rel='stylesheet', href='/stylesheets/atom-one-light.css')
  link(rel='stylesheet', href='/stylesheets/line-numbers.css')
  meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')

block content
  #content
    h1 #{paste.id}
    p.metadata.
      Pasted #[a(href="#{url}", title="#{fullTimestamp}") #{postedAt}] by #{paste.submitter}.
    pre
      code#paste
        | #{data}

  p.footer.
    generated by #[a(href="https://git.grytoyr.io/npaste/") npaste] #{version} running at #{domain}
